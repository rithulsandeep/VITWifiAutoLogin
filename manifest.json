{
  "manifest_version": 3,
  "name": "WiFi Auto-Login",
  "version": "1.2",
  "description": "Logs in to the WiFi portal with one click.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["http://phc.prontonetworks.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  }
}
