{
    "manifest_version": 3,
    "name": "WiFi Auto-Login",
    "version": "1.0",
    "description": "Logs into VIT's Wifi using your credentials.",
    "permissions": [
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "http://phc.prontonetworks.com/*"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  